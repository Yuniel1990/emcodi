    {% extends 'base.html.twig' %}
    {% block title %}Gasto{% endblock %}
    {% block breadcrumb %}
    {{ breadcrumb.breadcrumb(['Inicio','NIVEL_2','NIVEL_3']) }}
    {% endblock %}
    {% block title_portlet %}Mostrando Gasto{% endblock %}

    {% block body %}
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover col-md-offset-4">
                <tbody>
                    <tr>
                        <th>Id</th>
                            <td>{{ gasto.id }}</td>
                    </tr>
                    <tr>
                        <th>Fecha</th>
                            <td>{% if gasto.fecha %}{{ gasto.fecha|date('d/M/Y H:i') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Numerogasto</th>
                            <td>{{ gasto.numeroGasto }}</td>
                    </tr>
                    <tr>
                        <th>Gastomn</th>
                            <td>{{ gasto.gastoMN }}</td>
                    </tr>
                    <tr>
                        <th>Gastocuc</th>
                            <td>{{ gasto.gastoCUC }}</td>
                    </tr>
                    <tr>
                        <th>Gastototal</th>
                            <td>{{ gasto.gastoTotal }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="col-md-6 margin-top-20">
                {{ form_start(delete_form) }}
                <a class="btn btn-default" href="{{ path('gasto_index') }}">Volver</a>
                <a class="btn btn-default"
                   href="{{ path('gasto_edit', { 'id': gasto.id }) }}">Editar</a>
                <input class="btn btn-danger" type="submit" value="Delete">
            </div>
        </div>
    </div>
    {% endblock %}
