    {% extends 'base.html.twig' %}
    {% block title %}TipoOperacion{% endblock %}
    {% block breadcrumb %}
    {{ breadcrumb.breadcrumb(['Inicio','NIVEL_2','NIVEL_3']) }}
    {% endblock %}
    {% block title_portlet %}Listado de TipoOperacion{% endblock %}
    {% block stylesheetsTables %}{{ parent() }}{% endblock %}

            {% block body %}
        <div class="row margin-bottom-20">
                <div class="col-md-3">
                    <a href="{{ path('tipooperacion_new') }}"
                       class="btn btn-default green-stripe fa fa-plus">Nuevo</a>
                </div>
            </div>
                <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover" id="tableBuscar">
                    <thead>
                    <tr>
                            <th>Id</th>
                            <th>Descripcion</th>
                            <th>Descuento</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tipoOperacion in tipoOperacions %}
                    <tr>
                                <td>
                                    <a href="{{ path('tipooperacion_show', { 'id': tipoOperacion.id }) }}">{{ tipoOperacion.id }}</a>
                                </td>
                                <td>{{ tipoOperacion.descripcion }}</td>
                                <td>{{ tipoOperacion.descuento|default('0.00') }}</td>
                                <td>
                                    <ul>
                                            <li>
                                                <a href="{{ path('tipooperacion_show', { 'id': tipoOperacion.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('tipooperacion_edit', { 'id': tipoOperacion.id }) }}">edit</a>
                                            </li>
                                    </ul>
                                </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endblock %}
        {% block javascriptsTable %}
    {{ parent() }}
<script>
    jQuery(document).ready(function () {
        initTableTipoOperacion.init();
    });
</script>
{% endblock %}