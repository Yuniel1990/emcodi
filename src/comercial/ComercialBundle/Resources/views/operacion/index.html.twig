{% extends 'base.html.twig' %}
    {% block title %}Operacion{% endblock %}
    {% block breadcrumb %}
        {{ breadcrumb.breadcrumb(['Inicio','NIVEL_2','NIVEL_3']) }}
    {% endblock %}
    {% block title_portlet %}Listado de Operacion{% endblock %}
    {% block stylesheetsTables %}
        {{ parent() }}
    {% endblock %}

            {% block body %}
                <div class="row margin-bottom-20">
                    <div class="col-md-3">
                        <a href="{{ path('operacion_new') }}"
                           class="btn btn-default green-stripe fa fa-plus">Nuevo</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="tablePEGI">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha</th>
                                <th>Nombre del Comprador</th>
                                <th>No. Factura</th>
                                <th>No. Orden Desp.</th>
                                <th>Tipo Operacion</th>
                                <th>Importe CUC</th>
                                <th>Importe MN</th>
                                <th>Descuento</th>
                                <th>Total</th>
                                <th>Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for operacion in operacions %}
                                <tr>
                                    <td>
                                        <a href="{{ path('operacion_show', { 'id': operacion.id }) }}">{{ operacion.id }}</a>
                                    </td>
                                    <td>{% if operacion.fecha %}{{ operacion.fecha|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ operacion.comprador}}</td>
                                    <td>{{ operacion.noFactura}}</td>
                                    <td>{{ operacion.ordenDespacho}}</td>
                                    <td>{{ operacion.tipoOperacion.descripcion }}</td>
                                    <td>{{ operacion.importeCUC }}</td>
                                    <td>{{ operacion.importeMN }}</td>
                                    <td>{{ operacion.tipoOperacion.descuento|default('0.00')~'%' }}</td>
                                    <td>{{ operacion.total }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('operacion_show', { 'id': operacion.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('operacion_edit', { 'id': operacion.id }) }}">edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endblock %}
        {% block javascriptsTable %}
            {{ parent() }}
        {% endblock %}