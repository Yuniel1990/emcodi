    {% extends 'base.html.twig' %}
    {% block title %}Utilidad{% endblock %}
    {% block breadcrumb %}
    {{ breadcrumb.breadcrumb(['Inicio','NIVEL_2','NIVEL_3']) }}
    {% endblock %}
    {% block title_portlet %}Mostrando Utilidad{% endblock %}

    {% block body %}
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover col-md-offset-4">
                <tbody>
                    <tr>
                        <th>Id</th>
                            <td>{{ utilidad.id }}</td>
                    </tr>
                    <tr>
                        <th>Mes</th>
                            <td>{% if utilidad.mes %}{{ utilidad.mes|date('d/M/Y H:i') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Valor</th>
                            <td>{{ utilidad.valor }}</td>
                    </tr>
                    <tr>
                        <th>Ventas</th>
                            <td>{{ utilidad.ventas }}</td>
                    </tr>
                    <tr>
                        <th>Gastos</th>
                            <td>{{ utilidad.gastos }}</td>
                    </tr>
                    <tr>
                        <th>Impuestos</th>
                            <td>{{ utilidad.impuestos }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="col-md-6 margin-top-20">
                {{ form_start(delete_form) }}
                <a class="btn btn-default" href="{{ path('utilidad_index') }}">Volver</a>
                <a class="btn btn-default"
                   href="{{ path('utilidad_edit', { 'id': utilidad.id }) }}">Editar</a>
                <input class="btn btn-danger" type="submit" value="Delete">
            </div>
        </div>
    </div>
    {% endblock %}
