    {% extends 'base.html.twig' %}
    {% block menu %}{{ parent() }}{% endblock %}
    {% block title %}Venta{% endblock %}
    {% block breadcrumb %}
    {{ breadcrumb.breadcrumb(['Inicio','NIVEL_2','NIVEL_3']) }}
    {% endblock %}
    {% block title_portlet %}Listado de Venta{% endblock %}
    {% block stylesheetsTables %}{{ parent() }}{% endblock %}

            {% block body %}
        <div class="row margin-bottom-20">
                <div class="col-md-3">
                    <a href="{{ path('venta_new') }}"
                       class="btn btn-default green-stripe fa fa-plus">Nuevo</a>
                </div>
            </div>
                <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover" id="TablaVenta">
                    <thead>
                    <tr>
                            <th>Id</th>
                            <th>Nofactura</th>
                            <th>Importecuc</th>
                            <th>Importemn</th>
                            <th>Ventatotal</th>
                            <th>Costocuc</th>
                            <th>Costomn</th>
                            <th>Costototal</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ventum in ventas %}
                    <tr>
                                <td>
                                    <a href="{{ path('venta_show', { 'id': ventum.id }) }}">{{ ventum.id }}</a>
                                </td>
                                <td>{{ ventum.noFactura }}</td>
                                <td>{{ ventum.importeCUC }}</td>
                                <td>{{ ventum.importeMN }}</td>
                                <td>{{ ventum.ventaTotal }}</td>
                                <td>{{ ventum.costoCUC }}</td>
                                <td>{{ ventum.costoMN }}</td>
                                <td>{{ ventum.costoTotal }}</td>
                                <td>
                                    <ul>
                                            <li>
                                                <a href="{{ path('venta_show', { 'id': ventum.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('venta_edit', { 'id': ventum.id }) }}">edit</a>
                                            </li>
                                    </ul>
                                </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endblock %}
        {% block javascriptsTable %}
    {{ parent() }}
<script>
    jQuery(document).ready(function () {
        initTableVenta.init();
    });
</script>
{% endblock %}