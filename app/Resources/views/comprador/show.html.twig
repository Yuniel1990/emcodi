    {% extends 'base.html.twig' %}
    {% block title %}Comprador{% endblock %}
    {% block breadcrumb %}
    {{ breadcrumb.breadcrumb(['Inicio','NIVEL_2','NIVEL_3']) }}
    {% endblock %}
    {% block title_portlet %}Mostrando Comprador{% endblock %}

    {% block body %}
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover col-md-offset-4">
                <tbody>
                    <tr>
                        <th>Id</th>
                            <td>{{ comprador.id }}</td>
                    </tr>
                    <tr>
                        <th>Descripcion</th>
                            <td>{{ comprador.descripcion }}</td>
                    </tr>
                    <tr>
                        <th>Codigo</th>
                            <td>{{ comprador.codigo }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="col-md-6 margin-top-20">
                {{ form_start(delete_form) }}
                <a class="btn btn-default" href="{{ path('comprador_index') }}">Volver</a>
                <a class="btn btn-default"
                   href="{{ path('comprador_edit', { 'id': comprador.id }) }}">Editar</a>
                <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
    {% endblock %}
